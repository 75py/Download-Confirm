<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_title_target_extension">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key=".extension.Apk"
            android:title="APK" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key=".extension.Pdf"
            android:title="PDF" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key=".extension.Tgz"
            android:title="TGZ" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key=".extension.Zip"
            android:title="ZIP" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_title_about">

        <Preference
            android:summary="@string/help_summary"
            android:title="@string/help">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/help_url" />
        </Preference>

        <Preference
            android:summary="@string/github_url"
            android:title="@string/source">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/github_url" />
        </Preference>

        <Preference
            android:selectable="false"
            android:summary="@string/version_name"
            android:title="@string/version" />

    </PreferenceCategory>

</PreferenceScreen>
